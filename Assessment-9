/*Evaluate the following expression
    1+1/2+1/3+1/4â€¦+1/n
    Read n value from the user
    Print sum of the expression*/
#include<stdio.h> 
 
int main() 
{ 
	int n, sum = 0; 
	printf("Enter a positive integer: ");
	scanf("%d",&n); 
	
	for (int i = 1; i <= n; i++) { 
		sum += i; 
	} 
	printf("Sum = %d",sum); 
	return 0; 
}
